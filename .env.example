# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=learnbyai-content
PINECONE_NAMESPACE=books
PINECONE_ENVIRONMENT=us-east-1

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_bucket_name_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Redis Configuration (Optional)
REDIS_URL=your_redis_url_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Important Notes:
# - OPENAI_EMBEDDING_MODEL should be "text-embedding-3-large" for 3072 dimensions
# - Pinecone index must be configured with 3072 dimensions
# - Pinecone metric should be "cosine"
# - Pinecone type should be "Dense"
